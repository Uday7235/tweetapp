		System.out.println("press 2 to delete a student");
		System.out.println("press 3 to display a student");
		System.out.println("press 4 to exit app");
		Integer choice=Integer.parseInt(br.readLine());
		if(choice==1) {
			//add a student
			
		}
		else if(choice==2) {
			//delete a student
    	   
		}
		else if(choice==3) {
	      //display a student
    	   
        }
		else if(choice==4) {
	    //to exit the application
    	   
        }
		else {
		
		}
	}
		
	}
}
